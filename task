#!/bin/bash

. ./task-vars

function task() {
    TASK_NAME=$1
    for TASK_PATH in "${TASK_PATHS[@]}"; do [ -f "$TASK_PATH/$TASK_NAME" ] && TASK_FILE="$TASK_PATH/$TASK_NAME" && break; done
    echo "Task "$TASK_FILE" started"
    "$TASK_FILE" "${@:2}"
    EXIT_CODE=$?
    echo
    echo "Task "$TASK_FILE" completed with exit code $EXIT_CODE"
}

time task $@
echo
exit $EXIT_CODE
